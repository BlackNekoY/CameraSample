<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.slim.me.camerasample">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".camera.preview.CameraPreviewActivity"/>
        <activity android:name=".surfaceview_with_egl.EGLSurfaceActivity"/>
        <activity android:name=".encode_test.EncodeAndMuxActivity"/>
        <activity android:name=".record.CameraRecordActivity"/>
        <activity android:name=".texture_test.TextureTestActivity"/>
    </application>

</manifest>